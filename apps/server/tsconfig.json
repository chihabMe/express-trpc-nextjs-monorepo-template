
{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators":true,
    "emitDecoratorMetadata":true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop":true,
    "skipLibCheck": true,
    "outDir":"./dist",
    "rootDir":"./src"
  },
  "include":["./src"],
  "exclude":["./node_modules","./dist"]
}
